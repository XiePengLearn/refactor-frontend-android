<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <include layout="@layout/jkx_public_title_home" />

    <LinearLayout
        android:id="@+id/exim_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:text="@string/rebind_phone_tip1"
            android:textColor="#8B8B7A"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:text="@string/rebind_phone_tip2"
            android:textColor="#8B8B7A"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/checkout_phonenumber"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/corner"
                android:gravity="center_vertical"
                android:hint="请输入新手机号码"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:textSize="13sp" />

            <Button
                android:id="@+id/checkout_nextstep"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_shap_button_23"
                android:paddingTop="@dimen/y5"
                android:paddingBottom="@dimen/y5"
                android:text="@string/regist_get_verification_code"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/old_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/checkout_eidtcode"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/corner"
                android:hint="@string/regist_verification_code"
                android:inputType="numberSigned"
                android:maxLength="6"
                android:paddingLeft="10dp"
                android:textSize="13sp" />

            <Button
                android:id="@+id/checkout_identity"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_shap_button_23"
                android:paddingTop="@dimen/y5"
                android:paddingBottom="@dimen/y5"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/y6"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收不到短信？使用"
                android:textColor="#999999"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/voice_remind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x2"
                android:text="语音验证码"
                android:textColor="@color/bg_green"
                android:textSize="@dimen/x13" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <EditText
                android:id="@+id/phonenumber"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y30"
                android:layout_weight="1"
                android:background="@drawable/corner"
                android:hint="@string/input_bind_phone_no"
                android:inputType="numberSigned"
                android:paddingLeft="10dp"
                android:textSize="@dimen/x15" />

            <Button
                android:id="@+id/nextstep"
                android:layout_width="130dp"
                android:layout_height="@dimen/y30"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_shap_button_1"
                android:gravity="center"
                android:text="@string/regist_get_verification_code"
                android:textColor="#ffffff"
                android:textSize="@dimen/x15" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/commit_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <EditText
                android:id="@+id/eidtcode"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y30"
                android:layout_weight="1"
                android:background="@drawable/corner"
                android:hint="@string/regist_verification_code"
                android:inputType="numberSigned"
                android:maxLength="6"
                android:paddingLeft="10dp"
                android:textSize="@dimen/x15" />

            <Button
                android:id="@+id/commit"
                android:layout_width="130dp"
                android:layout_height="@dimen/y30"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_shap_button_1"
                android:text="@string/tijiao"
                android:textColor="#ffffff"
                android:textSize="@dimen/x15" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:orientation="vertical"
            android:visibility="visible">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="温馨提示"
                android:textColor="#ff128bff"
                android:textSize="@dimen/x13" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/y5"
                android:text="更换手机后，下次登录需要使用新手机号码登录"
                android:textColor="#dddddd"
                android:textSize="@dimen/x13" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="@dimen/y6"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收不到短信？使用"
                android:textColor="#999999"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/voice_remind2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x2"
                android:text="语音验证码"
                android:textColor="@color/bg_green"
                android:textSize="@dimen/x13" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/change_after"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/bg_corner"
        android:visibility="gone">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="5dp"
            android:text="@string/rebind_phone_tip6"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>