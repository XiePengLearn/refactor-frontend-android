<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cube_ptr="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x15"
    android:paddingRight="@dimen/x15">


    <com.sxjs.common.widget.headerview.JDHeaderView
        android:id="@+id/find_pull_refresh_header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        cube_ptr:ptr_duration_to_close="200"
        cube_ptr:ptr_duration_to_close_header="300"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.0"
        cube_ptr:ptr_resistance="2.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y40"
                        android:layout_marginTop="@dimen/y10"
                        android:background="@drawable/bg_shap_button_13"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x8"
                            android:drawableStart="@drawable/zbyyj"
                            android:drawablePadding="@dimen/x3"
                            android:text="@string/watch_zhibiao1"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/x14" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_indicator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/y40"
                        android:layout_marginTop="@dimen/y16"
                        android:background="@drawable/bg_shap_button_16"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/x8"
                            android:drawableStart="@drawable/gzzb"
                            android:drawablePadding="@dimen/x3"
                            android:text="关注指标"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/x14" />

                        <TextView
                            android:id="@+id/tv_followMore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/x5"
                            android:padding="@dimen/x5"
                            android:gravity="end|center_vertical"
                            android:text="更多"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/x13" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_follow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />

                </LinearLayout>


            </LinearLayout>
        </ScrollView>


    </com.sxjs.common.widget.headerview.JDHeaderView>

</LinearLayout>