<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/y12"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/x300"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/second_level_name"
            android:layout_width="@dimen/x158"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/second_level_img"
            android:text="一、医疗质量 "
            android:textColor="@color/white"
            android:textSize="@dimen/x15" />

        <TextView
            android:id="@+id/first_level_name"
            android:layout_width="@dimen/x150"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/first_level_img"
            android:text="一、医疗质量 "
            android:textColor="@color/white"
            android:textSize="@dimen/x15" />

    </RelativeLayout>

    <TextView
        android:id="@+id/three_level_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginTop="@dimen/y7"
        android:layout_marginBottom="@dimen/y8"
        android:text="3、日间手术占择期手术比例"
        android:textColor="#1773CB"
        android:textSize="@dimen/x13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:background="@drawable/bg_shap_button_24"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:layout_marginBottom="@dimen/y5"
                android:text="填报项"
                android:textColor="#333333" />

        </LinearLayout>

        <View
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/x1"
            android:layout_weight="1"
            android:background="@drawable/bg_shap_button_25"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y5"
                android:layout_marginBottom="@dimen/y5"
                android:text="值"
                android:textColor="#333333" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/zhibiao_value_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zhibiao_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>