<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <include layout="@layout/jkx_public_title_home" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/x13"
        android:paddingRight="@dimen/x13"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y3"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"

                android:layout_marginLeft="@dimen/x14"
                android:layout_marginRight="@dimen/x16"
                android:src="@drawable/about_logo" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginTop="@dimen/y29"
                android:src="@drawable/about_text_context" />

            <ImageView
                android:layout_width="@dimen/x115"
                android:layout_height="@dimen/x115"
                android:layout_marginTop="@dimen/y29"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/about_upload_pic" />
            <TextView
                android:layout_width="wrap_content"
                android:text="扫码下载App"
                android:textSize="@dimen/x13"
                android:layout_marginBottom="@dimen/x19"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_fonts_333333"
                android:layout_marginTop="@dimen/y12"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </ScrollView>


</LinearLayout>