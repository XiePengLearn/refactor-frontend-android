<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x15"
    android:paddingRight="@dimen/x15">

    <include layout="@layout/jkx_public_title_home" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y40"
        android:layout_gravity="top">

        <View
            android:layout_width="match_parent"
            android:layout_height="3px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x15"
            android:layout_marginRight="@dimen/x15"
            android:background="#EEEEEE" />

        <!--<android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:tabIndicatorHeight="0dp"
            app:tabMode="fixed" />-->
        <LinearLayout
            android:layout_width="220dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x10"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/new_message1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:visibility="invisible"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/new_message"
                    android:paddingLeft="@dimen/x3"
                    android:paddingRight="@dimen/x3"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/x9" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/new_message2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_message"
                    android:paddingLeft="@dimen/x3"
                    android:paddingRight="@dimen/x3"
                    android:visibility="invisible"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/x9" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/new_message3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/new_message"
                    android:paddingLeft="@dimen/x3"
                    android:visibility="invisible"

                    android:paddingRight="@dimen/x3"
                    android:text="0"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/x9" />
            </RelativeLayout>





        </LinearLayout>

        <com.antiless.support.widget.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            app:indicatorEndColor="#2297FF"
            app:indicatorMarginBottom="3dp"


            app:indicatorMarginEnd="20dp"
            app:indicatorMarginStart="20dp"
            app:indicatorStartColor="#2297FF"
            app:tabIndicatorHeight="3dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="#2297FF"></com.antiless.support.widget.TabLayout>
    </RelativeLayout>

    <!-- <com.kpi.client.view.CustomViewPager
         android:id="@+id/jkx_viewpage"
         android:layout_width="match_parent"
         android:layout_height="match_parent" />-->

    <android.support.v4.view.ViewPager
        android:id="@+id/jkx_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ddd" />


</LinearLayout>