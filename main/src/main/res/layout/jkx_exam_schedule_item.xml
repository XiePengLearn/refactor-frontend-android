<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/x20">

        <View
            android:id="@+id/line1"
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/x17"
            android:layout_marginTop="@dimen/y8"
            android:background="#EFEFEF" />

        <View
            android:id="@+id/line2"
            android:layout_width="@dimen/x1"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:visibility="visible"
            android:layout_marginLeft="@dimen/x17"
            android:background="#EFEFEF" />

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/x35"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y8"
            android:scaleType="center"
            android:src="@drawable/exam_schedule_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y4"
                android:text="2019年06月12日"
                android:textColor="#666666"
                android:textSize="@dimen/x13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/x20"
                android:layout_marginTop="@dimen/y6"
                android:background="@drawable/bg_shap_button_22"
                android:layout_marginBottom="@dimen/y5"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x14"
                    android:src="@drawable/exam_schedule_1_selected" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y12"
                    android:layout_marginLeft="@dimen/x17"
                    android:layout_marginTop="@dimen/y12"
                    android:text="启动"
                    android:textColor="#333333"
                    android:textSize="@dimen/x15" />

            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>