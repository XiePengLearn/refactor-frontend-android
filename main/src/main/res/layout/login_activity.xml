<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/jkx_public_title_home" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y8"
                android:background="@drawable/ic_login_app" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y40"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/x27"
                    android:text="+86"
                    android:textColor="#333333"
                    android:textSize="@dimen/x13" />

                <com.sxjs.common.view.ClearEditText
                    android:id="@+id/edit_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:cursorVisible="true"
                    android:gravity="left|center_vertical"
                    android:hint="请输入您的用户名"
                    android:paddingRight="@dimen/x10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#333333"
                    android:textColorHint="#dddddd"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="@dimen/x16" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y1"
                android:layout_marginRight="@dimen/x30"
                android:background="#DEDEDE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y24"
                android:orientation="vertical"
                android:paddingLeft="@dimen/x30"
                android:paddingRight="@dimen/x30">

                <com.sxjs.common.view.ClearEditText
                    android:id="@+id/edit_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"

                    android:gravity="left|center_vertical"
                    android:hint="请输入您的密码"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:paddingRight="@dimen/x10"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#333333"
                    android:textColorHint="#dddddd"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@drawable/text_cursor"
                    android:textSize="@dimen/x16" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginTop="@dimen/y1"
                    android:background="#DEDEDE" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x30"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/login_remember_passwords"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/bt_login_checkbox"
                    android:drawablePadding="2dp"
                    android:gravity="left|center_vertical"
                    android:text="@string/login_remember_password"
                    android:textColor="#333333"
                    android:textSize="@dimen/x13" />

                <TextView
                    android:id="@+id/login_find_password"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="@string/login_forget_password"
                    android:textColor="#333333"
                    android:textSize="@dimen/x13" />
            </LinearLayout>

            <Button
                android:id="@+id/login_entry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginTop="@dimen/y23"
                android:layout_marginRight="@dimen/x30"
                android:background="@drawable/bg_shap_button_1"
                android:gravity="center"
                android:paddingTop="@dimen/y8"
                android:paddingBottom="@dimen/y8"
                android:text="@string/login_entry"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x15" />

            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y10"
                android:layout_marginBottom="@dimen/y11"
                android:gravity="center"
                android:text="@string/regist_regist"
                android:textColor="#333333"
                android:textSize="@dimen/x15" />


        </LinearLayout>


    </ScrollView>


</LinearLayout>