<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#66666666"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn_select_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y41"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginRight="@dimen/x9"
            android:background="@drawable/shape_semi_fillet_write"
            android:textColor="#407BE7"
            android:textSize="@dimen/x17" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginRight="@dimen/x9"
            android:background="#EEEEEE" />


        <Button
            android:id="@+id/btn_select_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y41"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginRight="@dimen/x9"
            android:background="@drawable/shape_down_semi_fillet_write"
            android:textColor="#407BE7"
            android:textSize="@dimen/x17" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y41"
            android:layout_marginBottom="@dimen/y7"
            android:layout_marginLeft="@dimen/x9"
            android:layout_marginRight="@dimen/x9"
            android:layout_marginTop="@dimen/y7"
            android:background="@drawable/bg_shape_corner_white"
            android:text="@string/cancel"
            android:textColor="#407BE7"
            android:textSize="@dimen/x19"

            />
    </LinearLayout>
</RelativeLayout>